generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Float
  quantity    Int
  category    Category   @relation(fields: [categoryId], references: [id])
  categoryId  Int
  //orderItems  OrderItem[]
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String
  products Product[]
}
